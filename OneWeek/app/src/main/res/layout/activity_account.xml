<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_account"
    tools:context="whataday.oneweek.Login.AccountActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgorund_image"
        android:background="#14000000"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:id="@+id/space_center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="meet the stranger\naround the world\n\nsee the daily life\nof other person "
        android:id="@+id/text_intro"
        app:font="custom1"
        android:textSize="26dp"
        android:layout_alignBottom="@id/space_center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="One Week"
        app:font="custom3"
        android:textColor="#ffffff"
        android:id="@+id/text_oneweek"
        android:textSize="30dp"
        android:layout_above="@id/text_intro"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:id="@+id/box_assign"
        android:background="#ddffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms of use"
            android:layout_marginTop="14dp"
            app:font="custom2"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="#000000"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:id="@+id/space_center_assign"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#dd000000"
            android:textSize="14dp"
            android:layout_alignBottom="@id/space_center_assign"
            android:id="@+id/text_asign"
            android:lineSpacingExtra="7dp"
            android:text="@string/account_intro"
            app:font="custom1"/>


        <LinearLayout
            android:layout_width="254dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_assign_exit"
                android:text="Exit"
                app:font="custom2"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:id="@+id/btn_assign_exit"/>

            <Button
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_assign_agree"
                android:textColor="#000000"
                app:font="custom2"
                android:text="Agree"
                android:textAllCaps="false"
                android:id="@+id/btn_assign_agree"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="254dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/box_login_button"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/btn_login_google"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_login_google"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            app:font="custom2"
            android:text="SIGN in with GOOGLE"/>

        <Button
            android:layout_above="@id/btn_login_google"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/btn_login_facebook"
            android:layout_marginBottom="25dp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:background="@drawable/btn_login_facebook"
            app:font="custom2"
            android:text="SIGN in with FACEBOOK"/>

    </RelativeLayout>

</RelativeLayout>
