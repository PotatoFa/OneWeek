<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <whataday.oneweek.CustomView.CordinatorLayout.HeaderLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="whataday.oneweek.CustomView.CordinatorLayout.HeaderScrollBehavior">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#000000"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country/city"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/detail_toolbar_camera_icon"
                android:background="@drawable/icon_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"/>



        </android.support.v7.widget.Toolbar>

    </whataday.oneweek.CustomView.CordinatorLayout.HeaderLayout>


    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/detail_refresh"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="true"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7"
        app:layout_behavior="whataday.oneweek.CustomView.CordinatorLayout.ContentsLayoutBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerview_detail"/>

        </RelativeLayout>


    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</android.support.design.widget.CoordinatorLayout>