<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="whataday.oneweek.Login.TermsActivity">


    <RelativeLayout
        android:id="@+id/toolbar_match"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F9F9F9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            app:font="custom2"
            android:text="Terms of use"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/btn_account_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textSize="23dp"
                    app:font="custom2"
                    android:background="#00ffffff"
                    android:layout_centerVertical="true"
                    android:textColor="#4079FF"/>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:text="blur\nblur\n\nblur\nn\nblu\nr\nblur\nblur\nb\nlur\nbl\nur\n"/>
    </RelativeLayout>


</LinearLayout>
