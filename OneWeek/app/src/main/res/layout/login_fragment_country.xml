<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_country">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_image"
        android:background="#14000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="custom1"
        android:layout_marginTop="175dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Where are you living?"/>

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="26dp"
        android:text="click here!"
        android:id="@+id/text_country"
        app:font="custom1"
        android:layout_centerInParent="true"/>

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="236dp"
        android:layout_height="2dp"
        android:layout_alignBottom="@id/text_country"
        android:background="@drawable/btn_county_line"/>


    <Button
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_marginBottom="85dp"
        android:enabled="false"
        android:background="@drawable/color_graytoyellow_two"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_next_country"/>

</RelativeLayout>