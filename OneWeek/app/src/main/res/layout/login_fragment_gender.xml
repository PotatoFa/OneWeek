<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gender">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_image"
        android:background="#14000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="custom1"
        android:layout_marginTop="175dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:gravity="center"
        android:text="What is your gender?"
        android:id="@+id/text_gender_question"/>


    <RadioGroup
        android:layout_width="260dp"
        android:layout_height="116dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_gender_question"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/radio_group_gender">

        <RadioButton
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:button="@drawable/radio_gender_man"
            android:id="@+id/radio_man"/>

        <RadioButton
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_marginLeft="20dp"
            android:button="@drawable/radio_gender_woman"
            android:id="@+id/radio_woman"/>

    </RadioGroup>

    <Button
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_marginBottom="85dp"
        android:text="Next"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/color_graytoyellow"
        android:enabled="false"
        android:id="@+id/btn_next_gender"/>

</RelativeLayout>