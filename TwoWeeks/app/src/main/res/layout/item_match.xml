<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:id="@+id/matchitem"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="#346464"
        android:scaleType="centerCrop"
        android:id="@+id/matchitem_imageview"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:id="@+id/matchitem_matchuser">
        <company.twoweeks.twoweeks.AutoSizeText.AutoResizeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/matchitem_country"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="1"
            android:layout_marginTop="90dp"
            android:textSize="80dp"
            android:text="Country"/>
        <company.twoweeks.twoweeks.AutoSizeText.AutoResizeTextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/matchitem_city"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:textSize="50dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_below="@id/matchitem_country"
            android:layout_centerHorizontal="true"
            android:text="city"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:id="@+id/matchitem_notuser">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#235332"
            android:id="@+id/icon_match"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            />
        <company.twoweeks.twoweeks.AutoSizeText.AutoResizeTextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/icon_match"
            android:textSize="50dp"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:id="@+id/matchitem_notuser_message"
            android:text="@string/message_runintomatch"/>
    </RelativeLayout>


</RelativeLayout>